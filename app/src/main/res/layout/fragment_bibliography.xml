<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BibliographyFragment"
    android:id="@+id/bibliographyLayout"
    android:background="@color/bright_foreground_material_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.epicodus.librarius.helpers.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/bibliographyTextView"
            android:text="Bibliography"
            android:textAlignment="center"
            android:textSize="40sp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/bibliographyRecyclerView"
            android:layout_below="@+id/bibliographyTextView">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>
